{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "strict": true,

    "skipLibCheck": true,
    "declaration": true,

    "esModuleInterop": true,

    "outDir": "dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts",
    "src/scripts/generate.js",
    "src/scripts/link.js",
    "src/scripts/link.js"
  ],
  "exclude": ["**/*.test.ts"]
}
