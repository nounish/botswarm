{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "strict": true,

    "skipLibCheck": true,
    "declaration": true,

    "esModuleInterop": true,

    "outDir": "dist",
    "rootDir": "./"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
